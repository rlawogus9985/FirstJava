package com.bit.hello.i;

public class If_Else_01 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		//1부터 100까지 숫자 중에서 짝수만의 합
		int intSum = 0;
		
		for(int i = 0 ; i <=100 ; i ++) {
			
			if(i%2 == 0) {
				intSum += i;
			}
		}
		
		System.out.println("1부터 100까지 숫자중 짝수만의 합=" + intSum);
		
		//1부터 100까지 숫자 중에서 홀수만의 합
		intSum = 0;
		for(int i = 0; i <=100; i++) {
			if(i % 2 != 0) {
				intSum += i;
			}
		}
		System.out.println("1부터 100까지 숫자중 홀수만의 합=" + intSum);
	}

}
