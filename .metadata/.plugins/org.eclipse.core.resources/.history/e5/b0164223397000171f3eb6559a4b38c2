package com.bit.hello.i;

public class If_Else {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		//int intNum1 = 0;
		
		//for 내부에서 쓰이는 문자는 그 중괄호 안에서만 효력을 발휘한다.
		// 1부터 10까지 짝수 홀수 구분
		for(int i = 1; i <= 10 ; i ++) {
			
			int temp = (i/2)*2;
			if(temp == i) {
				System.out.println(i + "는 짝수");
			} else {
				System.out.println(i + "는 홀수");
			}
		}
	
	    for(int i = 0 ; i <=10 ; i ++) {
	    	//나머지 연산자
	    	if(i % 2 == 0) {
	    		System.out.println(i + "는 짝수");
	    	} else {
	    		System.out.println(i + "는 홀수");
	    	}
	    }
		
	}

}
